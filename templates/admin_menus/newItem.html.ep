% layout 'default';

%= tag 'div', (class => 'col-md-8 admin') => begin
  %= tag 'h3' => 'Создание нового пункта меню'
  %= tag 'div' => begin
    %= form_for '/admin/menus/edit/'.$id.'/new', (method => 'POST'), (class => 'menu') => begin
      %= tag 'div' => (class => 'list') => begin
        %= text_field 'name', placeholder => 'Название', (class => 'form-control')
        %= text_field 'url', placeholder => 'Url', (class => 'form-control')
        <select class="form-control" name="role">
          % while(my $next = $roles_list->hash) {
            <option value="<%= $next->{id} %>"><%= $next->{name} %></option>
          % }
        </select>
      % end
      %= submit_button 'Создать' => (class => 'btn btn-info btn-list')
    % end
  % end
% end
